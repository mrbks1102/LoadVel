.contents.contents_medium
  .form
    .form_title
      | ログイン
    = form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f|
      = render partial: "users/shared/error_messages"
      .form-group
        = f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control"
      .form-group
        = f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control"
      .actions
        div[style="text-align: center;"]
          = f.submit "ログイン", class: "btn-square"
    br/
    p.devise-link.text_deco
      | アカウントをお持ちでないですか？
      = render "users/shared/links"
      i.fas.fa-user-alt.btn-square.btn_sns.btn_guest_user
        = link_to "ゲストログイン(採用担当者様はこちらから)", users_guest_sign_in_path, method: :post
      i.fab.fa-twitter.btn-square.btn_sns.btn_twitter
        = link_to "twitterでログインする", user_twitter_omniauth_authorize_path
      i.fab.fa-facebook.btn-square.btn_sns.btn_facebook
        = link_to "facebookでログインする", user_facebook_omniauth_authorize_path
